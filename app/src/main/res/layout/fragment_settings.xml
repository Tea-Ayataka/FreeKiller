<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="Source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:paddingLeft="20dp" android:paddingTop="15dp"
    />
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:paddingRight="15dp" android:paddingLeft="15dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:paddingTop="5dp">
        <RadioButton
                android:text="RawDevArt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rawdevartButton"/>
        <RadioButton
                android:text="RawKuma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rawkumaButton"/>
        <RadioButton
                android:text="LHScan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/loveHeavenButton"/>
        <RadioButton
                android:text="Manga1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/manga1000Button"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>